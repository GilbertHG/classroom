<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="center"
    android:background="@drawable/border_rl_blue_white"
    android:elevation="3dp"
    android:layout_margin="@dimen/margin_small"
    >
    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_toLeftOf="@+id/img_false"
        android:layout_alignParentLeft="true"
        android:textAlignment="textStart"
        android:singleLine="true"
        android:textColor="@color/putih"
        android:textSize="@dimen/title_font"
        android:gravity="start" />
    <TextView
        android:id="@+id/text_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/putihGelap1"
        android:textSize="@dimen/text_font"
        android:layout_below="@+id/text_title"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/img_false"
        android:textAlignment="textStart"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="start" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_true_green"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_standard"
        android:id="@+id/img_true"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_close_red"
        android:layout_toLeftOf="@+id/img_true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_small"
        android:id="@+id/img_false"
        />
</RelativeLayout>