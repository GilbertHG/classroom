<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exomatik.classroom.classroom.Activity.QuizPengajar"
    android:background="@drawable/blue_blur_background"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sv_quiz"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_standard"
            android:background="@drawable/border_rl_white"
            android:padding="@dimen/margin_standard"
            >
            <TextView
                android:id="@+id/text_soal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hitam1"
                android:textSize="@dimen/title_font"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/text_isi"
                android:layout_below="@+id/text_soal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hitam1"
                android:textSize="@dimen/title_font"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/margin_standard"
                />
            <TextView
                android:id="@+id/text_jawabA"
                android:layout_below="@+id/text_isi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_font"
                android:layout_alignParentLeft="true"
                android:background="@drawable/border_rl_blue"
                android:padding="@dimen/margin_small"
                android:textColor="@color/putih"
                android:layout_marginRight="@dimen/margin_standard"
                android:layout_toLeftOf="@+id/img_center"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/text_jawabB"
                android:layout_below="@+id/text_jawabA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/putih"
                android:textSize="@dimen/title_font"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/margin_standard"
                android:background="@drawable/border_rl_blue"
                android:padding="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_standard"
                android:layout_toLeftOf="@+id/img_center"
                android:textAlignment="center"
                />

            <ImageView
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_rl_blue"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/text_isi"
                android:id="@+id/img_center"
                android:layout_above="@+id/img_bottom"
                />
            <TextView
                android:id="@+id/text_jawabC"
                android:layout_below="@+id/text_isi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_font"
                android:layout_marginLeft="@dimen/margin_standard"
                android:layout_alignParentRight="true"
                android:background="@drawable/border_rl_blue"
                android:padding="@dimen/margin_small"
                android:textColor="@color/putih"
                android:layout_marginRight="@dimen/margin_standard"
                android:layout_toRightOf="@+id/img_center"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/text_jawabD"
                android:layout_below="@+id/text_jawabC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_font"
                android:layout_marginTop="@dimen/margin_standard"
                android:layout_marginLeft="@dimen/margin_standard"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_alignParentRight="true"
                android:background="@drawable/border_rl_blue"
                android:padding="@dimen/margin_small"
                android:textColor="@color/putih"
                android:layout_marginRight="@dimen/margin_standard"
                android:layout_toRightOf="@+id/img_center"
                android:textAlignment="center"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/putih"
                android:id="@+id/img_bottom"
                android:layout_below="@+id/text_jawabD"
                android:layout_marginTop="@dimen/margin_30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/hitam1"
                android:textSize="@dimen/title_font"
                android:layout_below="@+id/img_bottom"
                android:textAlignment="textEnd"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_standard"
                android:id="@+id/text_waktu"
                />
            <TextView
                android:id="@+id/text_jawaban"
                android:layout_below="@+id/img_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hitam1"
                android:textSize="@dimen/title_font"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/margin_standard"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_jawab"
                android:background="@drawable/border_btn_blue_white"
                android:layout_below="@+id/text_jawaban"
                android:text="Jawab"
                android:textColor="@color/blue1"
                android:textSize="@dimen/title_font"
                android:visibility="gone"
                />
        </RelativeLayout>
    </ScrollView>

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/sv_quiz"
        app:rcRadius="10dp"
        app:rcBackgroundPadding="5dp"
        app:rcReverse="false"
        app:rcProgressColor="@color/blue2"
        app:rcBackgroundColor="@color/putihGelap1"
        android:layout_margin="@dimen/margin_standard"
        android:id="@+id/progress"
        />
</RelativeLayout>
