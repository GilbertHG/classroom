<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:n3="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ln_nilai"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="1dp"
    android:orientation="horizontal"
    android:background="@drawable/border_rl_blue"
    >

    <TextView
        android:id="@+id/img_name"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_accent"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_standard"
        android:maxEms="2"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/hitam2"
        android:textStyle="bold"
        android:text="AL"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_nama"
        android:layout_toRightOf="@+id/img_name"
        android:textColor="@color/putih"
        android:textSize="@dimen/title_font"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_standard"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_desc"
        android:layout_below="@+id/text_nama"
        android:layout_toRightOf="@+id/img_name"
        android:layout_toLeftOf="@+id/text_pengajar"
        android:textColor="@color/putih"
        android:textSize="@dimen/text_font"
        android:layout_marginRight="@dimen/margin_standard"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_small"
        android:maxLines="2"
        android:lines="2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_pengajar"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_standard"
        android:layout_marginRight="@dimen/margin_standard"
        android:textColor="@color/putih"
        android:textSize="@dimen/text_font"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_true_green"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_standard"
        android:id="@+id/img_check"
        android:visibility="gone"
        />
</RelativeLayout>