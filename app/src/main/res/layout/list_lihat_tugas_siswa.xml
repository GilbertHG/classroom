<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:n3="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ln_nilai"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginBottom="@dimen/margin_small"
    android:orientation="horizontal"
    android:background="@drawable/border_rl_white"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_nama"
        android:textColor="@color/hitam1"
        android:textSize="@dimen/title_font"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/img_check"
        android:singleLine="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_date_time"
        android:layout_centerVertical="true"
        android:textColor="@color/hitam2"
        android:textSize="@dimen/text_font"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_below="@+id/text_nama"
        android:maxLines="2"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_upload_green"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_standard"
        android:id="@+id/img_check"
        />
</RelativeLayout>