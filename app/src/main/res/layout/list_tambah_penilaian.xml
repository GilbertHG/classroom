<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_nilai"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="1dp"
    android:orientation="horizontal"
    android:background="@drawable/border_rl_blue_white"
    >
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:textSize="@dimen/title_font"
        android:textColor="@color/putih"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_standard"
        android:id="@+id/text_nomor"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:textSize="@dimen/title_font"
        android:textColor="@color/putih"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:id="@+id/text_nama"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:background="@drawable/border_et_putih"
        android:textColor="@color/hitam1"
        android:textColorHint="@color/putihGelap2"
        android:textSize="@dimen/text_font"
        android:paddingLeft="@dimen/margin_small"
        android:inputType="number"
        android:layout_marginRight="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:id="@+id/et_nilai"
        android:hint="Nilai"
        />
</LinearLayout>